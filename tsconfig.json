{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "root/*": [ "*" ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
